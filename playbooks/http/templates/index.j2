<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Primer parcial</title>
  </head>
  <body>
    <h1>Welcome to {{hostname.stdout}}</h1>

    <div>
      <table>
        <thead>
          <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Path</td>
            <td>Type</td>
          </tr>
        </thead>
        <tbody id="file-list">

        </tbody>
      </table>
      <form action="index_submit" method="get" accept-charset="utf-8">
        <input type="submit" value="get" name="" id=""/>
      </form>    

      <form method="POST" id="form" enctype="multipart/form-data">
        <input type="file" id="file-name" name="files[]" multiple   />
        <input type="submit" id="file-to-upload"  value="Upload File" name="submit" />
      </form>

    </div>
    <script charset="utf-8">
      
      const URL = 'http://{{ ansible_eth1.ipv4.address }}:8083'
      const renderItem = (item) => {
          return `<tr data-id="${item.id}">
                  <td>${item.id}</td>
                  <td>${item.name}</td>
                  <td>${item.path}</td>
                  <td>${item.type}</td>
              </tr>`
      }

      window.onload = () => {
          fetch(URL)
              .then(response => response.json())
              .then(data => {
                  const fileList = document.getElementById('file-list')
                  const template = data.map(renderItem).join('')
                  fileList.innerHTML = template
              });
      }
      
      const formdata  = document.getElementById('file-name')
      const triggerToUpload = document.getElementById('file-to-upload')
      formdata.append("originalFileName ", formdata.files[0], formdata.files[0].name);

      var requestOptions = {
        method: 'POST',
        body: formdata,
        redirect: 'follow'
      };

      const uploadFile = (file) => {
        fetch("http://{{ ansible_eth1.ipv4.address }}:8083/uploads", requestOptions)
          .then(response => response.text())
          .then(result => console.log(result))
          .catch(error => console.log('error', error));
      };

      const onSelectFile = () => uploadFile(formdata.files[0]);

      triggerToUpload.addEventListener('change', onselectFile, false);

    </script>
  </body>
</html>
