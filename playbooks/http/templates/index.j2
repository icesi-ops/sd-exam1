<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Primer parcial</title>
  </head>
  <body>
    <h1>Welcome to {{hostname.stdout}}</h1>

    <div>
      <table>
        <thead>
          <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Path</td>
            <td>Type</td>
          </tr>
        </thead>
        <tbody id="file-list">

        </tbody>
      </table>
      
      <form>
        <input type="file" id="file-to-upload" />
        <input type="submit" id="upload-file" value="Upload File" />
      </form>

    </div>
    <script charset="utf-8">
      
      const renderItem = (item) => {
          return `<tr data-id="${item.id}">
                  <td>${item.id}</td>
                  <td>${item.name}</td>
                  <td>${item.path}</td>
                  <td>${item.type}</td>
              </tr>`
      }

      window.onload = () => {
          const URL = 'http://{{ ansible_eth1.ipv4.address }}:8083'
          fetch(URL)
              .then(response => response.json())
              .then(data => {
                  const fileList = document.getElementById('file-list')
                  const template = data.map(renderItem).join('')
                  fileList.innerHTML = template
              });
      }

          const file = document.getElementById('file-to-upload')
          const uploadFile = document.getElementById('upload-file')

          const upload = (file) => {
              fetch('http://{{ansible_eth1.ipv4.address}}:8083/uploads',{
                method: 'POST',
                mode: 'cors',
                redirect: 'follow',
                referrerPolicy: 'no-referrer',
                body: file
              }).then(response => console.log(response));
          };

          const onSelectFileUpload = () => upload(file.file[0]);
          uploadFile.addEventListener('change', onSelectFileUpload, false); 

    </script>
  </body>
</html>
